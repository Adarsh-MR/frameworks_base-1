  <color name="cardinal_accent_neon_green">#27e4a0</color>

<!-- Backgrounds -->
  <color name="background_floating_material_light">@color/cardinal_dark_indigo</color>
  <color name="background_floating_material_dark">@color/cardinal_dark_indigo</color>
  <color name="background_material_dark">@color/cardinal_dark_indigo</color>
