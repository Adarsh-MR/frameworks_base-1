<resources xmlns:android="http://schemas.android.com/apk/res/android">

   <color name="cardinal_dark_indigo">#1b1523</color>
   <color name="cardinal_accent_neon_green">#ff27e4a0</color>

   <!-- Notification Header and Quick settings panel -->
     	<!-- Quick Settings panel - Accent -->

    <color name="system_accent_color">@color/cardinal_accent_neon_green</color>
    <color name="system_primary_color">@color/cardinal_dark_indigo</color>
    <color name="qs_detail_transition">@*android:color/cardinal_light_indigo</color>
    <color name="system_secondary_color">@color/cardinal_dark_indigo</color>

    <!-- The "inside" of a notification, reached via longpress -->
    <color name="notification_guts_bg_color">@color/system_secondary_color</color>
    <color name="notification_guts_title_color">#FFFFFFFF</color>
    <color name="notification_guts_text_color">#b2FFFFFF</color>
    <color name="notification_guts_btn_color">#FFFFFFFF</color>
    <!-- Shade color of notification guts background -->
    <color name="notification_shade_background_color">#33181422</color>
    <color name="notification_gear_color">@color/cardinal_accent_neon_green</color>

   <!-- Backgrounds -->
    <!-- The color of the legacy notification background -->
    <color name="notification_legacy_background_color">@color/cardinal_dark_indigo</color>
    <!-- The color of the material notification background -->
    <color name="notification_material_background_color">@color/cardinal_dark_indigo</color>
    <!-- The color of the material notification background when dimmed -->
    <color name="notification_material_background_dimmed_color">@color/cardinal_dark_indigo</color>
    <!-- The color of the material notification background when low priority -->
    <color name="notification_material_background_low_priority_color">@color/cardinal_dark_indigo</color>
    <!-- The color of the material notification background for media notifications when no custom
         color is specified -->
    <color name="notification_material_background_media_default_color">@color/cardinal_dark_indigo</color>

    <!-- Quick Settings tiles -->
    <color name="qs_tile_divider">#221B33</color>
    <color name="switch_accent_color">@color/cardinal_accent_neon_green</color>

    <!-- QS battery % text color -->
    <color name="qs_battery_text_color">@color/cardinal_accent_neon_green</color>
    <!-- QS battery graph text color -->
    <color name="qs_battery_graph_text_color">@color/cardinal_accent_neon_green</color>
    <!-- QS battery accent color -->
    <color name="qs_battery_accent">@color/cardinal_accent_neon_green</color>
    <!-- QS edit page background color -->
    <color name="qs_edit_item_decoration_bg">#221B33</color>
    <!-- QS alarm status text color -->
    <color name="qs_alarm_status_text_color">@color/cardinal_accent_neon_green</color>
    <!-- External QS tile tint color -->
    <color name="external_qs_tile_tint_color">@color/cardinal_accent_neon_green</color>

</resources>
